    function myKeyPoint()
    {
      document.getElementById("test").innerHTML="Key Points:";
      document.getElementById("self_kp").style.display='block'
      movepic('self_kp','/assets/self_kp_1.png');
      document.getElementById("cssmenu4").style.display='block'
      document.getElementById("voca_tb").style.display='none'
    }
   //change images
    function movepic(img_name,img_src) {
      document.getElementById(img_name).src=img_src;
    }
    function myVoca()
    {
      document.getElementById("test").innerHTML="Topic One 可參考單字:";
      movepic('self_kp','/assets/self_kp_1.png');
      document.getElementById("cssmenu4").style.display='none'
      document.getElementById("voca_tb").style.display='block'
      document.getElementById("self_kp").style.display='none'
      movepic('self_kp','');
    }
    function show_kp(id){
      try{
      var show = document.getElementBiId(id);
      if(show){
        if(show.style.display=='block'){
          show.style.display='none';
        }else{
        show.style.display='block';
        }
      }
      }catch(e){}
    }
  </script>

